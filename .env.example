# Agent: max tool/response turns.
AGENT_MAX_ITERATIONS=15

VLLM_URL=http://localhost:6001
VLLM_MODEL=/models/Meta-Llama-3.1-8B-Instruct-AWQ-INT4

# SearXNG for web search
SEARXNG_URL=http://localhost:6002

# FlareSolverr & Crawl4AI
FLARESOLVERR_URL=http://localhost:6102
CRAWL4AI_URL=http://localhost:6103

# Whisper for speech-to-text
WHISPER_URL=http://localhost:6002

# Telegram Bot
TELEGRAM_TOKEN=your-telegram-bot-token-here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# OpenRouter (for /external and --external): comma-separated model IDs, tried in order (fallback on 5xx/429)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODELS=openrouter/free,meta-llama/llama-3.1-8b-instruct:free

# Anthropic (for paid/external LLM)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Calendar + Tasks (OAuth2 - run: python -m src.main google-auth)
GOOGLE_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-oauth-client-secret
# Optional: default calendar id (use "primary" or a calendar email)
GOOGLE_CALENDAR_DEFAULT_ID=primary

# User timezone for "5PM" = local 5PM (IANA e.g. Europe/Paris, America/New_York)
USER_TIMEZONE=Africa/Casablanca

# MCP Email (lilith-emails) - STDIO transport. If not set, email tools are disabled.
MCP_EMAIL_COMMAND=uv
MCP_EMAIL_ARGS=--directory,${MCP_EMAIL_PROJECT_DIR:-/mnt/backup/code/agents/lilith-emails},run,mcp
MCP_EMAIL_ACCOUNT_ID=1

# MCP Browser (lilith-browser)
MCP_BROWSER_COMMAND=uv
MCP_BROWSER_ARGS=--directory,${MCP_BROWSER_PROJECT_DIR:-/mnt/backup/code/agents/lilith-browser},run,mcp

# MCP WhatsApp (lilith-whatsapp)
MCP_BROWSER_COMMAND=uv
MCP_WHATSAPP_ARGS=--directory,${MCP_WHATSAPP_PROJECT_DIR:-/mnt/backup/code/agents/lilith-whatsapp},run,mcp

# LangSmith (for tracing)
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=YOUR_KEY
LANGSMITH_PROJECT="Agent Lilith"